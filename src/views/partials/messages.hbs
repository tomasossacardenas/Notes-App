{{#if success_msg}}
    <div class="alert alert-success alert-dismissible fade show d-flex justify-content-between" role="alert">
    {{success_msg}}
        <button type="button" class="close transparent-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}
{{#if error_msg}}
    <div class="alert alert-error alert-dismissible fade show d-flex justify-content-between" role="alert" >
    {{error_msg}}
        <button type="button" class="close transparent-close" data-bs-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
{{/if}}